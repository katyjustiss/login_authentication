extends ./_layout

block content
  .onLoggedOut
    .login
      form
        h1 Login
        .form-group
          input(type="email" placeholder="email" class="form-control input-lg")
        .form-group
          input(type="password" placeholder="password" class="form-control input-lg")
        input(type="submit" value="Login" class="btn btn-info btn-lg")
        input(type="button" value="Register" class="toRegisterBtn btn btn-primary btn-lg")

    .register.hidden
      form
        h1 Register
        .form-group
          input(type="email" placeholder="email" class="form-control input-lg" required)
        .form-group
          input(type="password" placeholder="password" class="form-control input-lg" required)
        .form-group
          input(type="password" placeholder="password again" class="form-control input-lg" required)
        input(type="button" value="Back" class="toLoginBtn btn btn-info btn-lg")
        input(type="submit" value="Register" class="btn btn-primary btn-lg")

  .onLoggedIn.hidden
    h1
    button.doLogout.btn.btn-lg.btn-info Logout
